
// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?   // For credentials provider
  accounts      Account[]
  sessions      Session[]

  // SaaS specific
  teamId        String?
  team          Team?     @relation(fields: [teamId], references: [id])
  role          String    @default("MEMBER") // OWNER, MEMBER
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Team {
  id          String   @id @default(uuid())
  name        String
  apiKey      String   @unique // Used by agents to associate with this team
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  users       User[]
  servers     Server[]
  
  aiTokenUsage  Int      @default(0)
  aiTokenLimit  Int      @default(100000)
  aiProvider    String   @default("gemini") // "gemini" or "openai"
  geminiApiKey  String?
  openaiApiKey  String?
  
  // Notification settings
  telegramToken  String?
  telegramChatId String?
}

model Server {
  id          String   @id @default(uuid())
  teamId      String
  team        Team     @relation(fields: [teamId], references: [id])
  name        String
  hostname    String?
  ip          String?
  platform    String?
  status      String   @default("ONLINE") // ONLINE, OFFLINE
  version     String?
  lastSeen    DateTime @default(now())
  stats       String?  // JSON string of CPU, Mem, Disk
  
  // Monitoring thresholds
  cpuThreshold  Int @default(85)
  memThreshold  Int @default(85)
  diskThreshold Int @default(90)
  
  alerts      Alert[]
  commands    Command[]
  watchedFiles WatchedFile[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([teamId, hostname]) // Prevent duplicate servers per team
}

model WatchedFile {
  id        String   @id @default(uuid())
  serverId  String
  server    Server   @relation(fields: [serverId], references: [id])
  path      String
  enabled   Boolean  @default(true)
  lastCheck DateTime @default(now())
  lastUpdate DateTime @default(now())
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([serverId, path])
}

model Alert {
  id          String   @id @default(uuid())
  serverId    String
  server      Server   @relation(fields: [serverId], references: [id])
  type        String   // RISK_HIGH, RISK_MEDIUM, CPU_HIGH, etc.
  message     String
  details     String?  // JSON details
  isResolved  Boolean  @default(false)
  
  createdAt   DateTime @default(now())
}

model Command {
  id          String   @id @default(uuid())
  serverId    String
  server      Server   @relation(fields: [serverId], references: [id])
  type        String   // BAN_IP, UNBAN_IP, RESTART_AGENT
  payload     String?  // JSON arguments
  status      String   @default("PENDING") // PENDING, SENT, COMPLETED, FAILED
  result      String?  // Output from agent
  
  createdAt   DateTime @default(now())
  completedAt DateTime?
}
